  <form method="post" id="searchForm">
    <input type="hidden" id="pageType" value="{{pageType}}">
    <p>Response returned in {{responseTime}}</p>
    {{returnData}}
{{returnData.data}}
    <div class="form-group">
      <label>Key Words</label>
      <input type="text" class="form-control" placeholder="Keyword" name="dataKeyword" value="{{returnData.keyword}}" id="dataKeyword">
    </div>
    <div class="form-group">
      <label>Data</label>
      <textarea class="form-control" placeholder="data" name="data" id="data" rows="15">{{returnData.data}}</textarea>
    </div>
    <a class="sm-button brand-button" id="Sub" onclick="submitForm();">Submit</a>
  </form>
