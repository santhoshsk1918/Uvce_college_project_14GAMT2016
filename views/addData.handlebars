</div>

<script type="text/javascript">


function submitForm(){
  if("{{pageType}}" == "edit Data" ){
    document.forms[0].action = "/search/editDta";
    document.forms[0].submit();
  }else if("{{pageType}}" == "newData"){
    document.forms[0].action = "/search/addData";
    document.forms[0].submit();
  }

}
$(document).ready(function() {
  if("{{pageType}}" == "newData"){
    console.log("new Data");
  }else if("{{pageType}}" == "editData"){
    console.log("edit Data");
  }else{
    $("#searchForm :input").prop("disabled", true);
    $("#searchForm :a").prop("disabled", true);
    $('#sub').addClass("none")

  }

});

